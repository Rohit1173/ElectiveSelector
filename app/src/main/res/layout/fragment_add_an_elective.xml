                android:layout_marginTop="10dp"
                android:text="Elective 1"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/el1sub1card"
                android:layout_width="277dp"
                android:layout_height="247dp"
                android:backgroundTint="#BFEAF5"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/el1"
                app:strokeColor="#82AAE3"
                app:strokeWidth="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:hint="Add Subject Title">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/el1sub1Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AAE1EF"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="93dp"
                    android:hint="Add Faculty Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/el1sub1Faculty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AAE1EF"

                        />

                </com.google.android.material.textfield.TextInputLayout>


            </com.google.android.material.card.MaterialCardView>

