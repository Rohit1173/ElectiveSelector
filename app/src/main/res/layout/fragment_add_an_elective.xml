                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/el1sub2card"
                app:strokeColor="#82AAE3"
                app:strokeWidth="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:hint="Add Subject Title">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/el1sub3Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AAE1EF"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="93dp"
                    android:hint="Add Faculty Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/el1sub3Faculty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AAE1EF"

                        />

                </com.google.android.material.textfield.TextInputLayout>


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/el1scheduleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:text="Schedule release time"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/el1sub3card" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/el1scheduleTimeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#AAE1EF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="schedule"
                android:src="@drawable/ic_schedule"
                app:layout_constraintLeft_toRightOf="@+id/el1scheduleTime"
                app:layout_constraintTop_toBottomOf="@+id/el1sub3card" />

            <Button
                android:id="@+id/el1Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#82AAE3"
                android:text="POST"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/el1scheduleTime" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


