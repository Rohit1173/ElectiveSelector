<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2EDFB"
    tools:context=".fragments.SelectedElectives">

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/open_sans"
        android:text="Welcome, Rohit"
        android:textColor="#2B3A55"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/semBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#CFE1F8"
        android:enabled="false"
        android:fontFamily="@font/open_sans"
        android:text="SEMESTER 6"
        android:textColor="#2B3A55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sub1card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/semBtn"
       android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#CFE0F8"
        app:cardCornerRadius="10dp"
        >
        <TextView
            android:id="@+id/el1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Algorithmic Graph Theory"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textColor="#2B3A55"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/el1Faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Mary Samuel"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textColor="#2B3A55"
            android:textSize="12sp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="14dp"
            />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sub2card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/sub1card"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#CFE0F8"
        app:cardCornerRadius="10dp"
        >
        <TextView
            android:id="@+id/el2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Algorithmic Graph Theory"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textColor="#2B3A55"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/el2Faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Mary Samuel"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textColor="#2B3A55"
            android:textSize="12sp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="14dp"
            />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>