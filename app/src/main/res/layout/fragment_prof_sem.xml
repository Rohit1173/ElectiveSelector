<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2EDFB"
    tools:context=".fragments.ProfSem">

    <TextView
        android:id="@+id/semHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester 5"
        android:gravity="center"
        android:textColor="#2B3A55"
        android:textSize="22sp"
        android:fontFamily="@font/open_sans"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/el1List"
        android:layout_marginTop="34dp"
        android:layout_marginStart="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/el1List"
        android:layout_width="328dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/semHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#CFE0F8"
        android:text="Elective 1"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="#2B3A55"
        android:fontFamily="@font/open_sans"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:drawableEnd="@drawable/nextbtn"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/el2List"
        android:layout_width="328dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/el1List"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#CFE0F8"
        android:textAllCaps="false"
        android:text="Elective 2"
        android:textSize="22sp"
        android:textColor="#2B3A55"
        android:fontFamily="@font/open_sans"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:drawableEnd="@drawable/nextbtn"
        />
</androidx.constraintlayout.widget.ConstraintLayout>